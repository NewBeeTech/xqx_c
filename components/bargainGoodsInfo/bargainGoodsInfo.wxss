.bargain_content {
  top: 40rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bargain_rule {
  width: 90vw;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 24rpx;
  color: #6e6e6e;
  text-align: right;
  position: relative;
  top: 0;
}
.bargain_portrait {
  position: relative;
  top: -50rpx;
  width: 90vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.bargain_portrait1 {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.bargain_portrait1 > image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.bargain_portrait2 {
  font-size: 26rpx;
  color: #333;
  margin-top: 23rpx;
}

.bargain_good_info {
  border-radius: 10rpx;
  padding: 130rpx 32rpx 32rpx;
  width: calc(90vw - 64rpx);
  position: relative;
  top: -150rpx;
  box-shadow: 0 0 1em #ccc;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.bargain_right_info {
  width: 600rpx;
}

.bargain_img > image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 27rpx;
  border-radius: 5rpx;
}

.bargain_right_name {
  width: 65vw;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 40rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  color: #000;
}

.bargain_right_money {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bargain_right_money1 {
  font-size: 26rpx;
}

.bargain_right_money2 {
  font-size: 24rpx;
  color: #f39800;
}

.bargain_right_money3 {
  font-size: 36rpx;
  color: #000;
}

.bargain_right_money4 {
  font-size: 24rpx;
  color: #6e6e6e;
  margin-top: 10rpx;
}
