/* component/city/city.wxss */
.popup {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 99;
      background: rgba(0, 0, 0, 0.3);
}

.p-content {
      width: 100%;
      height: 80%;
      background: #fff;
      position: absolute;
      bottom: 0;
      left: 0;
}

.c-title {
      height: 80rpx;
      border-bottom: solid 1rpx #eee;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 30rpx;
}

.c-t-end {
      color: #888;
}

.c-city {
      width: 100%;
      height: calc(100% - 80rpx);
      position: relative;
}

.cityList {
      line-height: 60rpx;
      border-bottom: 1rpx solid #eee;
      font-size: 28rpx;
      color: #666;
      margin-left: 30rpx;
}






/*base code*/
.animated {
  animation-duration: 0.5s;
}



/*the animation definition*/
@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translate3d(0, 100%, 0)
  }
  100% {
    opacity: 1;
    transform: none
  }
}


.fadeInUp {
  animation-name: fadeInUp
}


/*the animation definition*/
@keyframes fadeOutDown {
  0% {
    opacity: 1
  }
  100% {
    opacity: 0;
    transform: translate3d(0, 100%, 0)
  }
}
.fadeOutDown {
  animation-name: fadeOutDown
}