/* pages/about/about.wxss */

.videoBox {
    width: 100%;
    height: 420rpx;
}

.videoBox>video {
    width: 100%;
    height: 100%;
}

.list {
    padding-left: 30rpx;
}

.list_title {
    height: 125rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: solid 1rpx #dadada;
    padding-right: 50rpx;
}

.list_title>text {
    font-size: 15px;
}

.list_title>image {
    width: 24rpx;
    height: 14rpx;
    margin-right: 20rpx;
}

.list_title_icon {
    transform: rotate(180deg);
}

.list_cont {
    padding: 30rpx;
    margin: 30rpx 0;
    background: #f4f4f4;
    border-radius: 8rpx;
    color: #333;
    font-size: 15px;
    line-height: 40rpx;
}

.tiao {
    height: 15rpx;
    border-top: solid 1rpx #e3e3e3;
    border-bottom: solid 1rpx #e3e3e3;
    background: #f0f0f0;
}

.cont{
    overflow: hidden;
}

.cont_title {
    font-size: 19px;
    color: #333;
    padding: 50rpx 0 0 30rpx;
    font-weight: bold;
}

.cont_box {
    height: 470rpx;
    width: 50%;
    float: left;
    text-align: center;
}

.cont_box>image {
    width: 90rpx;
    height: 90rpx;
    display: block;
    margin: 60rpx auto 26rpx;
}

.cont_box>text{
    line-height: 48rpx;
}


.Tz{
    padding-left: 16rpx;
}
.Tz>view{
    height: 145rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 40rpx 0 14rpx;
}
.Tz>view:nth-child(1){
    border-bottom: solid 1rpx #efefef;
}
.Tz>view>text{
    font-size: 15px;
}
.Tz>view>image{
    width: 24rpx;
    height: 14rpx;
    transform: rotate(90deg);
}

.Lx{
    padding-left: 30rpx;
}
.Lx_title{
    font-size: 18px;
    font-weight: bold;
    margin: 50rpx 0 60rpx;
}
.Lx_cont{
    display: flex;
    align-items: center;
    margin-bottom: 44rpx;
}
.Lx_cont>image{
    width: 45rpx;
    height: 45rpx;
}
.Lx_cont>text{
    margin-left: 22rpx;
    font-size: 14px;
    color: #333;
}