/* pages/ConfirmationOrder/ConfirmationOrder.wxss */
.wrap1{
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: solid 1rpx #dadada;
    border-bottom: solid 15rpx #f0f0f0;
}
.wrap1_box{
    padding-left: 38rpx;
}
.wrap1_box>view{
    height: 44rpx;
    font-size: 28rpx;
}
.wrap1_box>text{
    color: #999999;
    font-size: 28rpx;
    display: block;
    width: 630rpx;
}
.wrap1_icon{
    width: 19rpx;
    height: 32rpx;
    margin-right: 44rpx;
}

.wrap1_box2{
    padding-left: 29rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.wrap1_box2>image{
    width: 56rpx;
    height: 56rpx;
    margin-right: 18rpx;
}
.wrap1_icon2{
    margin-right: 34rpx;
}

.wrap2{
    border-bottom: solid 15rpx #f0f0f0;
}
.wrap2_title{
    display: flex;
    align-items: center;
    height: 136rpx;
    padding-left: 32rpx;
    font-size: 30rpx;
    font-weight: bold;
}
.wrap2_title>image{
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
    border: solid 1rpx #dadada;
    overflow: hidden;
    margin-right: 18rpx;
}
.wrap2_shop{
    box-shadow: 0 0 10rpx #e7e7e7;
    border-radius: 8rpx;
    padding: 35rpx 0 20rpx;
    display: flex;
    width: 686rpx;
    margin: 0 auto;
}
.wrap2_shop_img{
    width: 106rpx;
    height: 106rpx;
    border-radius: 8rpx;
    /* border: solid 1rpx #dadada; */
    display: block;
    margin: 0 26rpx 0 25rpx;
}
.wrap2_shop_name{
    width: 496rpx;
    line-height: 41rpx;
    /* padding-bottom: 10rpx; */
    font-size: 28rpx;
}
.wrap2_shop_shl>view{
    width: 112rpx;
    height: 38rpx;
    border: solid 1rpx #ff9a00;
    border-radius: 8rpx;
    line-height: 38rpx;
    text-align: center;
    font-size: 25rpx;
    color: #ff9a00;
    margin-bottom: 10rpx;
}
.wrap2_shop_shl>text{
    color: #6e6e6e;
    font-size: 25rpx;
    padding-left: 20rpx;
}
.wrap2_shop_jig{
    height: 50rpx;
    display: flex;
    align-items: center;
}
.wrap2_shop_jig>view{
    font-size: 34rpx;
}
.wrap2_shop_jig>view>text{
    font-size: 24rpx;
}
.wrap2_shop_jig>text{
    font-size: 24rpx;
    color: #999999;
    text-decoration: line-through;
    padding-left: 22rpx;
}
.wrap2_nub{
    height: 114rpx;
    margin-top: 15rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.wrap2_nub>text{
    font-size: 25rpx;
    color: #676767;
    padding-left: 35rpx;
}
.wrap2_nub_anj{
    display: flex;
    align-items: center;
    padding-right: 30rpx;
}
.wrap2_nub_anj>image{
    width: 56rpx;
    height: 56rpx;
}
.wrap2_nub_anj>view{
    width: 86rpx;
    font-size: 28rpx;
    text-align: center;
}

.wrap3{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 93rpx;
    display: flex;
    background: #fff;
}
.wrap3_cont{
    border-top: solid 1rpx #dadada;
    width: 50%;
    height: 100%;
}
.wrap3_cont_he{
    height: 36rpx;
    padding-top: 14rpx;
}
.wrap3_cont>view{
    font-size: 25rpx;
    padding-left: 50rpx;
    display: flex;
}
.wrap3_cont>view>view{
    color: #999999;
    padding-right: 12rpx;
}
.wrap3_btn{
    width: 50%;
    height: 100%;
    background: #ff9a00;
    color: #fff;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    line-height: 93rpx;
}
.wrap3_cont_he_sc{
    font-weight: bold;
}