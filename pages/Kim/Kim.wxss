/* pages/Kim/Kim.wxss */
.top{
    position: relative;
    overflow: hidden;
}
.top_w{
    position: absolute;
    right: 32rpx;
    top: 40rpx;
    display: flex;
    align-items: center;
}
.top_w>text{
    font-size: 14px;
    color: #666;
    margin-right: 10rpx;
}
.top_w>image{
    width: 35rpx;
    height: 35rpx;
}

.top_q{
    width: 252rpx;
    height: 252rpx;
    border-radius: 50%;
    background: #fea400;
    margin: 60rpx auto 0;
    color: #fff;
}
.top_q>text{
    display: block;
    text-align: center;
    padding-top: 70rpx;
    font-size: 13px;
}
.top_q>view{
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-top: 10rpx;
}
.top_t{
    color: #666;
    font-size: 14px;
    padding: 38rpx 0 60rpx;
    text-align: center;
}

.scroll_title{
    height: 80rpx;
    line-height: 80rpx;
    background: #f0f0f0;
    color: #666;
    font-size: 15px;
    padding-left: 34rpx;
}
.scroll{
    height: calc(100% - 510rpx);
}
.scroll_list{
    height: 160rpx;
    width: calc(100% - 70rpx);
    margin: 0 auto;
    border-bottom: solid 1rpx #dadada;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.scroll_list_left{
    display: flex;
    align-items: center;
}
.scroll_list_left>image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: solid 1rpx #979797;
    margin-right: 36rpx;
}
.scroll_list_left>view>view{
    font-size: 16px;
}
.scroll_list_left>view>text{
    font-size: 11.5px;
    color: #666;
}
.scroll_list_right>view{
    font-size: 17px;
    text-align: right;
    padding-right: 24rpx;
}
.scroll_list_right>text{
    font-size: 14px;
    color: #666;
}


.popup{
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
}
.popup>view{
    width: 640rpx;
    background: #fff;
    margin: 230rpx auto 0;
    border-radius: 8rpx;
}
.popup_title{
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    padding-top: 60rpx;
}
.popup_cont{
    font-size: 26rpx;
    display: block;
    padding: 40rpx 44rpx 26rpx;
    line-height: 40rpx;
}
.popup_btn{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
    border-top: solid 1rpx #dadada;
    color: #447ae6;
