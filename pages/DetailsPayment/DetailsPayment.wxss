/* pages/DetailsPayment/DetailsPayment.wxss */
.wrap1{
    border-top: solid 1rpx #dadada;
    padding: 32rpx 32rpx 0;
}
.wrap1_shop{
    box-shadow: 0 0 10rpx #e7e7e7;
    border-radius: 8rpx;
    padding: 35rpx 0 40rpx;
    display: flex;
}
.wrap1_shop_img{
    width: 106rpx;
    height: 106rpx;
    border-radius: 8rpx;
     border: solid 1rpx #dadada; 
    display: block;
    margin: 0 26rpx 0 25rpx;
}
.wrap1_shop_name{
    width: 496rpx;
    line-height: 41rpx;
    padding-bottom: 10rpx;
    font-size: 28rpx;
}

.wrap1_biq{
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: solid 1rpx #dadada;
    margin-top: 10rpx;
}
.wrap1_biq>view{
    display: flex;
    align-items: center;
}
.wrap1_biq>view>view{
    font-size: 25rpx;
    color: #666666;
}
.wrap1_biq_yas{
    text-decoration: line-through;
    padding-left: 22rpx;
}

.wrap2{
    padding-top: 64rpx;
    border-bottom: solid 15rpx #f0f0f0;
}
.wrap2_title{
    height: 75rpx;
    text-align: center;
    font-size: 26rpx;
}
.wrap2_rey{
    height: 130rpx;
    display: flex;
    justify-content: center;
    flex-wrap: nowrap;
}
.wrap2_rey>view{
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
    overflow: hidden;
    border: solid 1rpx #dadada;
    margin-right: 25rpx;
    position: relative;
    background: #e1e1e1;
}
.wrap2_rey>view:last-child{
    margin-right: 0;
}
.wrap2_rey>view>view{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 32rpx;
    background: rgba(0, 0, 0, 0.3);
    line-height: 32rpx;
    text-align: center;
    color: #fff;
    font-size: 20rpx;
}
.wrap2_rey>view>image{
    width: 100%;
    height: 100%;
}

.wrap2_mie{
    height: 100rpx;
    line-height: 100rpx;
    font-size: 24rpx;
    text-align: center;
    color: #989898;
}
.wrap2_btn{
    width: 687rpx;
    height: 90rpx;
    border-radius: 8rpx;
    background: #ff9400;
    color: #fff;
    font-size: 30rpx;
    line-height: 90rpx;
    text-align: center;
    font-weight: bold;
    margin: 0 auto;
}


.order_detailed{
    width: calc(100% - 64rpx);
    padding:35rpx 32rpx;
    font-size:28rpx;
    color: #999;
}
.order_detailed>view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 18rpx;
}
 .order_detailed text{
    color: #676767;
    font-size: 26rpx;
} 
.notice{
    display: flex;
    align-items: center;
}
.notice>view{
    width: 480rpx;
    text-align: right;
    padding-right: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.notice>view>text{
    margin-right: 15rpx;
    font-size: 26rpx;
}
.notice image{
    width: 15rpx;
    height: 26rpx;
}
.wrap1_shop_shl{
    display: flex;
    align-items: center;
}
.wrap1_shop_shl>view{
    width: 112rpx;
    height: 38rpx;
    border: solid 1rpx #ff9a00;
    border-radius: 8rpx;
    line-height: 38rpx;
    text-align: center;
    font-size: 25rpx;
    color: #ff9a00;
    margin-bottom: 10rpx;
}
.wrap1_shop_shl>text{
    color: #6e6e6e;
