}
.wrap1_shop_jig{
    height: 50rpx;
    display: flex;
    align-items: center;
}
.wrap1_shop_jig>view{
    font-size: 34rpx;
}
.wrap1_shop_jig>view>text{
    font-size: 24rpx;
}
.wrap1_shop_jig>text{
    font-size: 24rpx;
    color: #999999;
    text-decoration: line-through;
    padding-left: 22rpx;
}
