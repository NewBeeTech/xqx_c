/* pages/WriteAddress/WriteAddress.wxss */
.wrap{
    border-top: solid 1rpx #dadada;
    padding: 0 33rpx;
}
.wrap_box{
    height: 97rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: solid 1rpx #dadada;
    font-size: 28rpx;
}
.wrap_box>input{
    width: 535rpx;
    height: 70rpx;
    text-align: right;
}
.wrap_rei{
    display: flex;
    align-items: center;
    width: 535rpx;
    justify-content: flex-end;
}
.wrap_rei>image{
    width: 19rpx;
    height: 30rpx;
    margin-left: 46rpx;
}

.wrap_btn{
    width: 687rpx;
    height: 90rpx;
    border-radius: 8rpx;
    background: #ff9400;
    color: #fff;
    font-size: 30rpx;
    line-height: 90rpx;
    text-align: center;
    font-weight: bold;
    margin: 110rpx auto 0;
}

/* component/city/city.wxss */

.popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.3);
}

.p-content {
    width: 100%;
    height: 80%;
    background: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
}

.c-title {
    height: 80rpx;
    border-bottom: solid 1rpx #eee;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
}

.c-t-list {
    display: flex;
    align-items: center;
}

.c-t-list>text {
    color: #888;
}

.c-t-list>view {
    height: 100%;
    line-height: 80rpx;
    padding: 0 10rpx;
    border-bottom: solid 2rpx #ff9400;
}

.c-t-col {
    color: #888;
}

.c-city {
    width: 100%;
    height: calc(100% - 80rpx);
    position: relative;
}

.cityList {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 28rpx;
    color: #666;
    margin-left: 30rpx;
}

.animated {
    animation-duration: 0.5s;
}

.fadeInUp {
    animation-name: fadeInUp;
}

@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translate3d(0, 100%, 0);
    }

    100% {
        opacity: 1;
        transform: none;
    }
}

.fadeOutDown {
    animation-name: fadeOutDown;
}

@keyframes fadeOutDown {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
        transform: translate3d(0, 100%, 0);
    }
}