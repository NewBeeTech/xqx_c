<!--pages/goodDetail/goodDetail.wxml-->
<view>
  <scroll-view scroll-y="true">
    <!-- 轮播图 -->
    <view class='Swipr_wrap'>
      <swiper class='Swipr' indicator-dots='true' autoplay='true' indicator-color='#fff' indicator-active-color='#ffa400'>

        <swiper-item>
          <image bindtap='tpTap' src='http://mpic.denong.com/Android_b_07e66e295fe7ed73d3ac3c01bd813718' mode='aspectFill'></image>
        </swiper-item>
        <swiper-item>
          <image bindtap='tpTap' src='http://mpic.denong.com/Android_b_07e66e295fe7ed73d3ac3c01bd813718' mode='aspectFill'></image>
        </swiper-item>
        <swiper-item>
          <image bindtap='tpTap' src='http://mpic.denong.com/Android_b_07e66e295fe7ed73d3ac3c01bd813718' mode='aspectFill'></image>
        </swiper-item>
      </swiper>
      <view class='Swipr_pop' wx:if="{{obj.ratio!=0||obj.integral_ratio}}">10%</view>
    </view>
    <!-- 轮播图 -->
    <view class='goodsMsg'>
      <!-- 商品头部信息 -->
      <view class='goodTitle padding_rl bg_white'>
        <view class='goodsPrice'>
          <view class='price'>
            <view>
              <text>¥</text>200</view>
            <view>¥12.00</view>
          </view>
          <view class='reward'>拼团成功额外奖励：0.5 小金 </view>
          <view class='result'>
            <view>6人团</view>
            <view>已团：33件</view>
          </view>
        </view>
        <button class='goodShare' open-type="share">分享给好友</button>
      </view>
      <view class='goodNmae padding_rl bg_white'>买三送一，打折优惠买三送一，打折优惠买三送一，打折优惠买三送一，打折优惠</view>
      <view class='discount  bg_white' bindtap='showAlert'>
        <view>
          <image src='../../images/img/dui.png'></image>
          <text>全场包邮</text>
        </view>
        <view>
          <image src='../../images/img/dui.png'></image>
          <text>48小时2发货</text>
        </view>
        <view>
          <image src='../../images/img/dui.png'></image>
          <text>消费既得养老金</text>
        </view>
        <image class='rightImg' src='https://activity.denong.com/right_arrow.png'></image>
      </view>
      <!-- 商品头部信息 -->
    </view>
    <!-- 参团人数 -->
    <view class=''>
      <view class='groupsMsg padding_rl'>2名小伙伴正在参团，可直接参与</view>
      <view class='padding_rl bg_white'>
        <view class='groupsList'>
          <view class='groupsUser'>
            <image src='http://logo.denong.com/Android_b_03838ca571983efa63748022d8d3e710'></image>
            <view>姓名</view>
          </view>
          <view class='groupsFn'>
            <view>
              <view>还差1人拼成</view>
              <view class='groupsTime'>剩余10:12:23</view>
            </view>
            <view bindtap='goToConfirmationOrder'>去参团</view>
          </view>

        </view>
        <view class='groupsList'>
          <view class='groupsUser'>
            <image src='http://logo.denong.com/Android_b_03838ca571983efa63748022d8d3e710'></image>
            <view>姓名</view>
          </view>
          <view class='groupsFn'>
            <view>
              <view>还差1人拼成</view>
              <view class='groupsTime'>剩余10:22:30</view>
            </view>
            <view bindtap='goToConfirmationOrder'>去参团</view>
          </view>
        </view>
      </view>

    </view>
    <!-- 参团人数 -->
    <!-- 店铺位置 -->
    <view class='shopMsg padding_rl bg_white'>
      <view class='shopText'>
        <image src='http://logo.denong.com/Android_b_03838ca571983efa63748022d8d3e710'></image>
        <view>
          <text>店铺名称</text>
          <text>店铺地址</text>
        </view>
      </view>
      <view class='makePhone' bindtap='callPhone'>
        <image src='../../images/img/phone.png'></image>
      </view>
    </view>
    <!-- 店铺位置 -->
    <!-- 商品详情 -->
    <view class='goodDetails bg_white'>
      <view class='detaileTitle'>商品详情</view>
      
    </view>
  </scroll-view>
  <!-- 底部功能件 -->
  <view class='bottomBtn'>
    <view class='backHome' bindtap='backHome'>
      <image src='../../images/tabBar/a2.png'></image>
      <view>首页</view>
    </view>
    <!-- <view class='beginBtn'>
          <view>  
              <view>¥200.00</view>
              <view>一键开团</view>
          </view> 
          <view class='bottomreward'>奖励0.5小金</view>
      </view> -->
    <button class='beginBtn2' open-type="share">立即分享好友拼团</button>
  </view>
  <!-- 底部功能件 -->
</view>

<view class='alertView' style='top:{{alertTop}}%; display:{{isShow}}'>
  <view class='container'>
    <image bindtap='close' class='close' src='../../images/img/close.png'></image>
    <view class='alert_title'>服务说明</view>
    <view class='item'>
      <view class='sub_title'>
        <image class='ok_icon' src='../../images/img/dui.png'></image>
        <text>全场包邮</text>
      </view>
      <view class='des'>所有商品均无包邮</view>
    </view>
    <view class='item'>
      <view class='sub_title'>
        <image class='ok_icon' src='../../images/img/dui.png'></image>
        <text>消费即得养老金</text>
      </view>
      <view class='des'>每一笔消费都能获得一定比例的养老金</view>
    </view>
    <view class='item'>
      <view class='sub_title'>
        <image class='ok_icon' src='../../images/img/dui.png'></image>
        <text>假一赔十</text>
      </view>
      <view class='des'>若收到的商品是假冒品牌，可获得到加倍赔偿</view>
    </view>


  </view>
</view>