/* 弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 650rpx;
  height: 550rpx;
  border-radius: 6rpx;
  position: fixed;
  top: 20%;
  left: 50rpx;
  z-index: 9999;
  background: #f9f9f9;

}


.modal-user-img > image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 18rpx;
}

.modal-dialog-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-dialog-text {
  font-size: 30rpx;
  color: #000;
  padding: 30rpx 30rpx 46rpx;
  line-height: 60rpx;
}

.modal-dialog-button {
  border: 1rpx solid #f39800;
  color: #f39800;
  height: 86rpx;
  width: 470rpx;
  font-size: 30rpx;
  border-radius: 43rpx;
}

.modal-close-img {
  display: flex;
  justify-content: flex-end;
  padding-top: 42rpx;
  padding-right: 35rpx;
}
.modal-close-img > image {
  width: 30rpx;
  height: 30rpx;
}

