/* pages/exploreExperience/exploreExperience.wxss */
.wrap{
    width: 100%;
}
.blockArea{
    width: 100%;
}
.blockArea>image{
    width: 100%;
    height: 418rpx;
}
.wordArea{
    padding: 0 34rpx;
    margin-top: 26rpx;
}
.wordArea>text{
    font-size: 18px;
    color: #000;
    font-weight: bold;
}
.wordArea>.wordInfo{
    margin-top: 22rpx;
    font-size: 13px;
    color: #666;
    line-height: 20px;
}
.detailsTime{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 18rpx;
    margin-bottom: 40rpx;
}
.detailsTime>text{
    font-size: 13px;
    color: #bababa;
}
.detailsTime>view{
    width: 122rpx;
    height: 60rpx;
    border:1rpx solid #c7c7c7;
    border-radius: 50rpx;
    font-size: 13px;
    text-align: center;
    line-height: 60rpx;
}


.scrollNo{
    text-align: center;
    color: #7e7e7e;
    position: relative;
    top: 232rpx;
    font-size: 32rpx;
}
.scrollNo>image{
    width: 200rpx;
    height: 220rpx; 
    display: block;
    margin: 100rpx auto 50rpx;
}