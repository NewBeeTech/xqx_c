<import src="../../components/bargainGoodsInfo/bargainGoodsInfo.wxml"/>
<import src="../../components/barginUserList/barginUserList.wxml"/>

<view>
  <template  data="{{ barginOwnData }}" is="bargainGoodsInfo" />
  <view class="bargin_own_info">
    <view class="bargin_own_info1">已砍<span class="bargin_own_info2">{{ barginOwnData.cut_price }}</span>元  还差<span class="bargin_own_info2">20</span>元</view>
    <button bindtap="showModalBtn" class="bargin_share_btn">帮朋友砍一刀</button>
    <view class="bargin_own_info3">还剩 结束，快来砍价吧</view>
  </view>
  <view class="bargain_own_list">
    <template is="bargainUserList" data="{{ cutList: barginOwnData.cutList }}"/>
  </view>
  
  <!-- 弹窗 -->
  <view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
  <view class="modal-dialog" wx:if="{{showModal}}">
     <view class="modal-close-img" bindtap="hideModal"><image src="{{ closeIcon }}"/></view>
     <view class="modal-dialog-content">
         <view class="modal-user-img"><image src="{{ barginOwnData.userPortrait }}"/></view>
         <view class="modal-dialog-title">谢谢你帮我砍了{{ 3.24 }}元</view>
         <view class="modal-dialog-text">对该商品您再砍{{ 0 }}元就可以0元拿</view>
         <button bindtap="shareBtn" class="modal-dialog-button">立即分享，我也要砍价</button>
         <view class="modal-dialog-text2">本次砍价您已经获得3.00元养</view>
         <view class="modal-dialog-text2">老金，<text>下载小确幸app立即领取</text></view>
     </view>
  </view>
</view>
