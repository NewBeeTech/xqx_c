@import "../../components/bargainGoodsInfo/bargainGoodsInfo.wxss";

.bargin_own_info {
  position: relative;
  top: -120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 10rpx solid #eee;
  padding-bottom: 30rpx;
}

.bargain_own_list {
  position: relative;
  top: -70rpx;
}

.bargin_own_info1 {
  font-size: 24rpx;
  color: #6e6e6e;
}

.bargin_own_info2 {
  font-size: 30rpx;
  color: #f39800;
}

.bargin_own_info3 {
  font-size: 24rpx;
  color:  #a5a5a5;
}

.bottomBtn{
  height: 90rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  background: white;
}

.backHome{
  width: 90rpx;
  padding: 0 30rpx;
  text-align: center;
}
.backHome image{
    width: 18px;
    height: 18px;
}
.bargainBtn{
  width: calc(100vw - 90rpx);
  height: 100%;
  background: #ff9c00;
  color: white;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
}

.bargin_share_btn {
  width: 464rpx;
  background-color: #f39800;
  border: 1px solid #fff;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  margin: 30rpx 0;
}
