/* pages/MerchantList/MerchantList.wxss */
page{
    width: 100%;
    height: 100%;
}

.wrap1{
    position: relative;
    z-index: 9999;
    background: #fff;
}
.wrap1_img{
    display: block;
    width: 750rpx;
    height: 345rpx;
}
.wrap1_box{
    height: 55rpx;
    position: absolute;
    right: 0;
    bottom: 33rpx;
    background: #ff9c00;
    border-top-left-radius: 28rpx;
    border-bottom-left-radius: 28rpx;
    display: flex;
    align-items: center;
    padding: 0 14rpx 0 17rpx;
    font-size: 27rpx;
    color: #fff;
}
.wrap1_box>image{
    display: block;
    width: 28rpx;
    height: 28rpx;
    margin-right: 11rpx;
}

.wrap2{
    position: relative;
    z-index: 9999;
    background: #fff;
}
.wrap2_nav{
    width: 750rpx;
    display: flex;
    align-items: center;
    height: 90rpx;
    border-top: solid 1rpx #dadada;
    border-bottom: solid 1rpx #dadada;
}
.wrap2_nav_li{
    width: calc(50% - 1rpx);
    height: 31rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #242424;
    border-left: solid 1rpx #dadada;
}
.wrap2_nav_li:nth-child(1){
    border: none;
}
.wrap2_nav_li>image{
    width: 26rpx;
    height: 16rpx;
    display: block;
    margin-left: 14rpx;
    margin-top: 6rpx;
}
.wrap2_nav_li_zut{
    transform: rotate(180deg);
}

.wrap2_popup_ze{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
}

.wrap2_popup{
    background: #fff;
    width: 100%;
    padding-left: 32rpx;
}
.wrap2_popup>view{
    height: 100rpx;
    width: calc(100% - 90rpx);
    line-height: 100rpx;
    padding-left: 22rpx;
    font-size: 30rpx;
    border-bottom: solid 1rpx #dadada;
}
.wrap2_popup>view:last-child{
    border: none;
}
.wrap2_popup>view.wrap2_popup_col{
    color: #fd9c00;
    border-bottom-color: #fd9c00;
}

.wrap3{
    padding: 0 35rpx;
}
.wrap3>view{
    border-bottom: solid 1rpx #dadada;
    padding: 40rpx 0 38rpx;
    display: flex;
}
.wrap3>view:last-child{
    border: none;
}
.wrap3_img{
    width: 165rpx;
    height: 165rpx;border-radius: 8rpx;
    display: block;
    margin-right: 40rpx;
    /* border: solid 1rpx #dadada; */
}
.wrap3_box_name{
    width: 350rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 50rpx;
    font-size: 30rpx;
}
.wrap3_box_jig{
    height: 50rpx;
    display: flex;
    align-items: center;
}
.wrap3_box_jig>view{
    font-size: 34rpx;
}
.wrap3_box_jig>view>text{
    font-size: 24rpx;
}
.wrap3_box_jig>text{
    font-size: 24rpx;
    color: #999999;
    text-decoration: line-through;
    padding-left: 22rpx;
}
.wrap3_box_ewj{
    height: 50rpx;
    font-size: 25rpx;
    color: #6f6f6f;
}
.wrap3_box_shl{
    display: flex;
    align-items: center;
}
.wrap3_box_shl>view{
    width: 112rpx;
    height: 38rpx;
    border: solid 1rpx #ff9a00;
    border-radius: 8rpx;
    line-height: 38rpx;
    text-align: center;
    font-size: 25rpx;
    color: #ff9a00;
}
.wrap3_box_shl>text{
    color: #6e6e6e;
    font-size: 25rpx;
    padding-left: 20rpx;
}
.wrap3_btn{
    width: 130rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    border-radius: 35rpx;
    color: #fff;
    background: #ff9a00;
    font-size: 25rpx;
    margin-top: 70rpx;
}

.wrap2_jul{
    position: fixed;
    top: 0;
    left: 0;
}
.wrap3_jul{
    padding-top: 92rpx;
}