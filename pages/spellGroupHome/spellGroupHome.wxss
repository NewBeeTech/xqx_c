/* pages/spellGroup/spellGroup.wxss */
page {
  background: rgb(240,240,240);
}
.top_banner {
  height: 345rpx; 
}
.top_banner swiper-item {
  height: inherit;
}
.top_banner swiper-item image{
  display: block;
  width: 100%;
  height: 345rpx; 
}
.nav {
  margin-top: 16rpx;
  background: white;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  text-align: center;
}
.nav image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 16rpx;
}
.nav view{
  text-align: center;
}

.goods .title {
  padding: 20rpx;
  height: 83rpx;
  box-sizing: border-box;
  line-height: 83rpx;
  font-size: 28rpx;
  color: rgb(103,103,103);
}
.goods .item {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  align-items:center;
}
.goods .left_icon{
  display: block;
  width: 165rpx;
  height: 165rpx;
  border-radius: 10rpx;
}

.goods .right_des > view {
  box-sizing: border-box;
  padding: 10rpx 0 0 10rpx;
}

.goods .right_button {
  /* padding: 10rpx 20rpx; */
  background: gray;
  height: 60rpx;  
  font-size: 25rpx;
  border-radius: 30rpx;
  color: white;
}