.top_banner swiper-item image{
  width: 100%;
  height: 500rpx;
}
.nav {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
}
.nav image {
  display: block;
  width: 80rpx;
  height: 80rpx;
}
.nav view{
  text-align: center;
}

.goods .title {
  padding: 20rpx;
}
.goods .item {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  align-items:center;
}
.goods .left_icon{
  width: 200rpx;
  height: 200rpx;
}

.goods .right_des > view {
  box-sizing: border-box;
  padding: 10rpx 0 0 10rpx;
}

.goods .right_button {
  /* padding: 10rpx 20rpx; */
  background: gray;
  height: 60rpx;  
  font-size: 25rpx;
  border-radius: 30rpx;
  color: white;
}