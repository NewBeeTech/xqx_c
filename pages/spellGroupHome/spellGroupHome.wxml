      <image src='../../images/home/sousuo.png'></image>
      <view>搜索</view>
    </view> -->
  </view>

  <view class='goods'>
    <view class='title'>热门</view>
<!-- 货物列表 -->
    <view class='good_list'>
      <!-- 去砍价 -->
      <view class='item' wx:for="{{goods}}" wx:key='{{index}}' bindtap='toNextPage' data-page='{{3}}' data-id='{{item.id}}'  wx:if="{{item.goods_type==3}}">
        <image class='item_detail left_icon' src='{{item.img_url}}' mode='aspectFill'></image>
        <view class='item_detail right_des'>
          <view class='good_title'>{{item.name}}</view>
          <view>
            <text><text class='money_symbol'>￥</text><text class='min_price'>{{item.group_price}}</text></text>
            <text class='orange_price'>￥{{item.price}}</text>
          </view>
          <view class='xiaojin'>额外奖励:
            <text>{{item.currency / 100}}</text>小金
          </view>
          <view class='good_detail_bottom'>
            <text class='group_num'>{{item.group_person_num}}人已{{ item.group_price }}元拿</text>
            <!-- <view style="color: #fff; " class='wrap3_btn'>砍价{{ item.group_price }}元得</view> -->
            <view style="color: #fff; " class='wrap3_btn'>去砍价</view>
          </view>
      </view>
  </view>

     <!-- 去拼团  -->
       <view class='wrap3 {{julIf && "wrap3_jul"}}'>
      <view  wx:for="{{goods}}" wx:key='{{index}}' bindtap='toNextPage' data-page='{{6}}' data-id='{{item.id}}'  wx:if="{{item.goods_type==1}}" class='wrap3_item'>
        <!-- <view class='wrap3_itembox1'> -->
        <image mode='aspectFill' class='wrap3_img' src='{{item.img_url}}'></image>
        <view class='wrap3_box'>
          <view class='wrap3_box_name'>{{item.name}}</view>

          <view class="make_group_info">
            <view>
                    <view>
                      <text class="group_person_num">{{item.group_person_num}}人团</text>
                      <text class="group_num">已团{{item.group_num}}件</text>
                    </view>
                      <view class='wrap3_box_ewj'>奖励：{{ item.currency / 100 }}小金</view>
                        <view>
                                    <text class="group_price">￥{{item.group_price}}</text>
                                    <text class="price">￥{{item.price}}</text>
                        </view>
                </view>
                <view style="color: #fff; " class='wrap3_btn' data-id='{{item.id}}'>去拼团</view>
          </view>
        </view>
      </view>
</view>
    </view>

  </view>
