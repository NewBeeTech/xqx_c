/* pages/couponOrderInfo/couponOrderInfo.wxss */
.priceInfo{
    margin-top: 10rpx;
}
.coupOrder{
  margin:35rpx 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mealInfo>view{
  font-size: 16px;
  color: #000;
}
.mealInfo>text{
  font-size: 15px;
  color: #000;
}
.discountPrice{
  font-size: 15px;
  color: #333;
  margin-right: 20rpx;
}
.oriPrice{
  text-decoration: line-through;
  color: #979797;
  font-size: 12px;
  margin-right: 20rpx;
}
.discount{
  border:#fcaa01 1rpx solid;
  border-radius: 10rpx;
  font-size: 15px;
  color: #fcaa01;
  padding:5rpx 10rpx;
}
.imgInfo>image{
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
}

.couponInfo_wrap{
    position: relative;
}
.couponInfo_wrapBg{
    width: 712rpx;
    height: 872rpx;
    position: absolute;
    left: 22rpx;
    top: 0;
}

.couponInfo{
  margin:35rpx 35rpx;
  /* padding-bottom: 40rpx; */
  position: relative;
  z-index: 9;
  height: 100%;
}
.bg {
  display: block;
  width: 712rpx;
  height: calc(100% + 10rpx);
  position: absolute;
  left: 50%;
  margin-left: -356rpx;
  z-index: -1;
}
.couponInfo>view{
  font-size: 14px;
  color: #666;
  display: block;
  text-align: center;
  padding-top: 50rpx;
}
.couponInfo>.wssda{
    padding: 0;
    margin-bottom: 20rpx;
}

.qrCode{
  width: 254rpx;
  height: 254rpx;
  display: block;
  margin: 35rpx auto 48rpx;
}
.couponInfo>.couponCode{
  font-weight: bold;
  color: #333;
  font-size: 25px;
  margin-bottom: 80rpx;
  padding: 0;
}
.couponInfo>.effectiveTime{
  font-size: 14px;
  color: #000;
  margin-bottom: 16rpx;
  padding: 0;
}
.couponInfo>.refundMode{
  padding: 0;
}
.couponInfo>.applyRefund{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.couponInfo>.applyRefund>text{
  font-size: 14px;
  color: #666;
  margin-right: 10rpx;
}
.couponInfo>.applyRefund>image{
  width: 16rpx;
  height: 28rpx;
}
.couponInfo>.getInto{
  width: 100%;
  height: 85rpx;
  text-align: center;
  color: #f5a623;
  font-size: 15px;
  line-height: 85rpx;
  border-top: solid 1rpx #dadada;
  padding: 0;
}


.orderInfo{
  padding:35rpx 35rpx 20rpx;
}
.orderInfo>text{
  font-size: 16px;
  color: #333;
  line-height: 60rpx;
}
.orderInfo>view{
  font-size: 13px;
  color: #b8b8b8;
  margin-bottom: 10rpx;
}
.orderInfo>view>text{
  color: #666;
}

/* 窗体 */
.popup{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
    background: rgba(0, 0, 0, 0.5);
}
.popup>view{
    width: 590rpx;
    height: 400rpx; 
    margin: 265rpx auto 0;
    background: #fff;
    border-radius: 10rpx;
    position: relative;
}
.popup_box{
  padding-top: 45rpx;
  padding-bottom: 40rpx;
}
.popup_box>text{
    display: flex;
    justify-content: center;
    align-items: center;
    color: #000;
    font-size: 16px;
    font-weight: bold;
}
.popup>view>.explain{
  width: calc(100%-80rpx);
  padding: 0 40rpx 34rpx 40rpx;
  text-align: justify;
  
}
.popup>view>.explain>.describeTit{
  color: #000;
  font-size: 14px;
  font-weight: bold;
}
.popup>view>.explain>.describeInfo{
  font-size: 14px;
  color: #000;
  text-align: justify;
}
.popup>view>.close{
  width: 100%;
  height: 94rpx;
   border-top: 1rpx solid #e4e4e4; 
  font-size: 16px;
  color: #4f7bdf;
  display: flex;
  justify-content: center;
  align-items: center;
}
 button[class="cancel"]::after {
  border: 0;
}  
 button[class="confirm"]::after {
  border: 0;
}  
.cancel{
    width: 50%;
    margin: 0;
    color: #4f7bdf;
    border-radius: 0;
    border-bottom-left-radius: 10rpx;
    border-right: 1rpx solid #e4e4e4;
}
.confirm{
    width: 50%;
    margin: 0;
    border-radius: 0;
    color: #e33636;
    border-bottom-right-radius: 10rpx;
}