/* pages/paymentCompletion/paymentCompletion.wxss */
.fight_group_info{
    border-top:1rpx solid #f0f0f0;
    border-bottom: 14rpx solid #f0f0f0;
}
.fight_groups_success{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 34rpx;
    font-weight: bold;
    padding-top: 87rpx;
}
.fight_groups_success>image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 34rpx;
}
.status_describe{
    color: #999;
    font-size:26rpx;
    text-align: center;
    margin-top: 50rpx;
    padding-bottom: 90rpx;
}
.reward_price{
  font-size: 30rpx;
  color: #000;
  text-align: center;
  padding-bottom: 35rpx;
}
.bill_details{
    font-size: 26rpx;
    color: #999;
    text-align: center;
    display: flex;
    justify-content: center;
}
.bill_details>image{
    width: 20rpx;
    height: 33rpx;
    margin-left: 25rpx;
}
.fight_people{
    width: calc(100% - 70rpx;);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding:50rpx 0 50rpx 70rpx;
}
.fight_people>view{
    position: relative;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 24rpx;
    z-index: 9999;
}
.fight_people>view>view{
    font-size: 20rpx;
    color: #fff;
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: rgba(0, 0, 0, 0.5);
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: center;
    border-radius: 0 0 50rpx 50rpx;
}
.fight_people image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border:solid 1rpx #f3f3f3;
    margin-right: 24rpx;
}

.order_detailed{
    padding:38rpx 32rpx 16rpx;
    font-size:28rpx;
    color: #999;
    border-bottom: 14rpx solid #f0f0f0;
}
.order_detailed>view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 18rpx;
}
 .order_detailed text{
    color: #676767;
    font-size: 26rpx;
}
.order_detailed image{
    width: 15rpx;
    height: 26rpx;
}
.notice{
    display: flex;
    align-items: center;
}
.shop_name{
    display: flex;
    justify-content: flex-end;
}
.notice>view{
    max-width: 430rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.shop_name>view{
    max-width: 484rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.notice>view>text{
    margin-right: 20rpx;
    font-size: 26rpx;
}
