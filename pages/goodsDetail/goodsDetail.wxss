/* pages/spellGroup/spellGroup.wxss */

.top_banner {
  position: relative;
}

.top_banner swiper-item image {
  width: 100%;
  height: 500rpx;
}

.waring {
  position: absolute;
  right: -15rpx;
  bottom: 10rpx;
  padding: 10rpx 40rpx 10rpx 20rpx;
  border-radius: 30rpx;
  background: white;
}

.waring image {
  width: 30rpx;
  height: 30rpx;
}

.type_nav {
  position: relative;

}

.cont_title {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
}

.cont_title>view:nth-child(1) {
  border-right: solid 1rpx #c7c7c7;
}
.cont_title>view {
  width: 50%;
  text-align: center;
}
.cont_title>view>image {
  width: 24rpx;
  height: 14rpx;
}

.cont_title>view>text {
  font-size: 13px;
  color: #242424;
}

.cont_title_deg {
  transform: rotate(180deg);
}

.goods .title {
  padding: 20rpx;
}

.goods .item {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  align-items: center;
  justify-content: space-between;
}

.goods .left_info {
  display: flex;
  align-items: center;
}
.goods .left_icon {
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  border: 4rpx solid gray;
  
}

.goods .right_info {
  display: flex;
  align-items: center;
}

.goods .time {
  padding: 0 20rpx;
  text-align: center;
}

.goods .right_des > view {
  box-sizing: border-box;
  padding: 10rpx 0 0 10rpx;
}

.goods .right_button {
  /* padding: 10rpx 20rpx; */
  background: gray;
  height: 60rpx;
  font-size: 25rpx;
  border-radius: 30rpx;
  color: white;
}
