/* pages/myAccumGold/myAccumGold.wxss */
/*页面头部*/
.main{
  background: #f0f0f0;
}
.user_title {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding-top: 34rpx ;
  padding-bottom: 30rpx;
  margin-bottom: 14rpx;
}

.user_header {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20px;
  flex-shrink: 0;
}

.user_header image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
  border: solid 1rpx #dedede;
}

.user_top_word {
  font-size: 20px;
  color: #000;
  width: 100%;
  height: 60px;
  padding-left: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.user_top_word>text{
  font-size: 14px;
  color: #666;
}
.user_top_name {
  font-size: 20px;
}

/*内容*/
.user_warp {
  width: 100%;
  background-color: #f0f0f0;
}

.warp_sub {
  width: 100%;
  height: 45px;
  line-height: 45px;
  display: flex;
  flex-wrap:nowrap;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
  background: #fff;
}
.sub_tit{
  font-size: 15px;
  color: #212121;
  margin-left: 34rpx;
}
.warp_sub>.arrowOnfo{
  margin-right: 34rpx;
}
.priceInfo{
  font-size: 15px;
  color: #212121;
  margin-right: 25rpx;
}
.arrow{
  width:10px;
  height: 15px;
}
/* 窗体 */
.popup{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
    background: rgba(0, 0, 0, 0.5);
}
.popup>view{
    width: 642rpx;
    /* height: 400rpx; */
    margin: 265rpx auto 0;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
}
.popup_box{
  padding-top: 45rpx;
  padding-bottom: 40rpx;
}
.popup_box>text{
    display: flex;
    justify-content: center;
    align-items: center;
    color: #000;
    font-size: 16px;
    font-weight: bold;
}
.popup>view>.explain{
  width: calc(100%-80rpx);
  padding: 0 40rpx 45rpx;
  text-align: justify;
}
.popup>view>.explain>.describeTit{
  color: #000;
  font-size: 14px;
  font-weight: bold;
}
.popup>view>.explain>.describeInfo{
  font-size: 14px;
  color: #000;
}
.popup>view>.close{
  width: 100%;
  height: 96rpx;
  border-top: 1rpx solid #e4e4e4;
  font-size: 16px;
  color: #4f7bdf;
  display: flex;
  justify-content: center;
  align-items: center;
}

.qxtc{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    z-index: 99999;
}

