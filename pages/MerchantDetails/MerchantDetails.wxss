}
.Md_bottom>view{
    font-size: 14px;
}
.Md_bottom>view>text{
    color: #fea400
}
.Md_bottom>text{
    display: block;
    width: 220rpx;
    height: 70rpx;
    border-radius: 35rpx;
    font-size: 15px;
    color: #fff;
    background: #fea400;
    text-align: center;
    line-height: 70rpx;
}

.details{
