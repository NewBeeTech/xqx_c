}

.Md{
    padding: 0 35rpx;
    box-sizing: border-box;
}
.Md_top{
    height: 160rpx;
    display: flex;
    align-items: center;
    border-bottom: solid 1rpx #dadada;
}
.Md_top>image{
  
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: solid 1rpx #979797;
    margin-right: 30rpx;
}

.Md_top>view>view{
  width: 528rpx;
    font-size: 18px;
    margin-bottom: 10rpx;
    text-overflow:ellipsis;
    overflow:hidden;
