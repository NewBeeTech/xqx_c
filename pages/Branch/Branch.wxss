/* pages/Branch/Branch.wxss */
page{
    border-top: solid 1rpx #e4e4e4;
}

.scroll{
    height: 100%;
}
.list{
    height: 300rpx;
    width: calc(100% - 70rpx);
    border-bottom: solid 1rpx #dadada;
    margin: 0 auto;
    display: flex;
}
.list>image{
    width: 294rpx;
    height: 165rpx;
    border-radius: 8rpx;
    margin: 40rpx 40rpx 0 0;
}
.list_box{
    margin-top: 40rpx;
}
.list_box_name{
    font-size: 16px;
    line-height: 16px;
}
.list_box_btn{
    display: flex;
    margin-top: 26rpx;
}
.list_box_btn>view{
    width: 114rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 6rpx;
    background: #fea400;
    color: #fff;
    font-size: 11.5px;
}
.list_box_btn>view:nth-child(1){
    margin-right: 18rpx;
    background: #1a2e38;
}
.list_box_y{
    font-size: 13px;
    color: #6e6e6e;
    margin-top: 24rpx;
    line-height: 13px;
}
.list_box_j{
    display: flex;
    align-items: center;
    margin-top: 18rpx;
}
.list_box_j>view{
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border: solid 1rpx #fea400;
    color: #fea400;
    border-radius: 6rpx;
    font-size: 13px;
    margin-right: 12rpx;
}
.list_box_j>text{
    color: #6d6d6d;
    font-size: 13px;
}
.list_box_j_l{
    margin-right: 55rpx;
}


.scrollNo{
    text-align: center;
    color: #989898;
}
.scrollNo>image{
    width: 200rpx;
    height: 220rpx;
    display: block;
    margin: 100rpx auto 50rpx;
}
