<!--pages/orderDetails/orderDetails.wxml-->
<view class='order_info_head'>
    <view>
        <view class='fight_success'>{{xqObj.order_state==-2||xqObj.order_state==-1?"已取消":"拼团成功"}}</view>

        <text wx:if="{{xqObj.order_state==2}}">商家已发货，请耐心等待</text>
        <text wx:if="{{xqObj.order_state==-2||xqObj.order_state==-1}}">已取消订单\n退款3个工作日内将返还你的支付账户</text>
        <text wx:if="{{xqObj.order_state==4}}">待商家发货，请耐心等待</text>
        <text wx:if="{{xqObj.order_state==3}}">已完成收货</text>
        <text wx:if="{{xqObj.order_state==0}}">待支付</text>
    </view>
        <image src='../../images/icon/waitFor.png' class='waitImg'></image>
</view>

<view class='position_info'>
    <view>
        <text class='buyers_name'>{{xqObj.receive_name}}</text>
        <text>{{xqObj.receive_phone}}</text>
    </view>
    <text>{{xqObj.receive_address}}</text>
</view>

<view class='fight_info'>
    <view class='fight_icon'>
        <!-- <image src='../../images/icon/waitFor.png'></image> -->
        <text>拼团成功</text>
    </view>
    <view class='headPor'>
        <image wx:for='{{xqObj.imgList}}' wx:key='{{index}}' src='{{item.portrait}}'></image>
    </view>
</view>

 <view class='order_list'>
    <view class='order_status'>  
        <text class='shop_name'>{{xqObj.merchant_name}}</text>
        <image src='../../images/icon/jit2.png'></image>
    </view> 
    <view class='order_info'>
        <image src="{{xqObj.img_url}}"></image>
        <view class='price_info'>
            <view class='shop_info'>{{xqObj.name}}</view>
            <view class='present_price'>
                <view>
                    <text class='symbol'>￥</text>{{xqObj.group_price}}<text class='original_price'>￥{{xqObj.price}}</text>
                </view>
            </view>
        </view> 
    </view>
</view>
<view class='order_detailed'>
    <view>
        <view>参团时间</view>
        <text>{{xqObj.joinTime}}</text>
    </view>
    <view>
        <view>订单编号</view>
        <text>{{xqObj.express_number}}</text>//?
    </view>
    <view>
        <view>快递单号</view>
        <text>{{xqObj.serial_number}}</text>
    </view>
    <view>
        <view>拼团须知</view>
        <view class='notice'>
            <view>{{xqObj.explain_content}}</view>
            <image src='../../images/icon/right_arrow2.png'></image>
        </view>     
    </view>
</view>
<view class='btn_bar'>
    <view class='customer_service_btn' bindtap='quxTap' wx:if="{{xqObj.order_state==0||xqObj.order_state==1}}">取消订单</view>//1
      <view class='customer_service_btn' wx:if="{{xqObj.order_state==3}}">售后</view>  <!--订单完成宽度  percent_width  -->
     <view class='confirmation_receipt_btn identical' bindtap='qusTap' wx:if="{{xqObj.order_state==2}}" >确认收货</view> 
    <view class='buy_again_btn identical' wx:if="{{xqObj.order_state==3}}">再次购买</view>
    <view class='sharing_friends_btn identical' wx:if="{{xqObj.order_state==1||xqObj.order_state==2||xqObj.order_state==3||xqObj.order_state==4}}">分享好友</view>
</view>
<!-- 弹窗 -->
<view class='popup' wx:if='{{false}}'>
    <view>
         <!-- <view class='popup_box'>         
            <text>退款提示</text>
         </view>  -->
         <view class='explain'>
            <text class='describeInfo'>是否取消订单？</text>
         </view>
         <view class='close'>
            <button class='cancel' bindtap='sqtkTap'>取消</button>
            <button class='confirm' bindtap='sqtkTap'>确认退款</button>
         </view>
    </view>
</view>
