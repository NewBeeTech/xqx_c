                      </block>
                  </view>
                




<!-- 弹窗 -->
<view class='popup' wx:if='{{qxdd}}'>
    <view>
         <!-- <view class='popup_box'>
            <text>退款提示</text>
         </view>  -->
         <view class='explain'>
            <text class='describeInfo'>是否取消订单？</text>
         </view>
         <view class='close'>
            <button class='cancel' bindtap='sqtkTap'>取消</button>
            <button class='confirm' bindtap='quxTap'>确认</button>
         </view>
    </view>
</view>
