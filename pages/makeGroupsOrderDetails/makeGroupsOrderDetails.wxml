                          <view class='qr_sh' wx:if="{{xqObj.order_state==1}}" data-goods_type='{{xqObj.goods_type}}' data-id="{{xqObj.id}}" bindtap='qxdTap'>取消订单</view>
                          <view class='qr_sh' wx:if="{{xqObj.order_state==2}}" data-goods_type='{{xqObj.goods_type}}' data-id='{{xqObj.id}}' data-delivery_method="{{xqObj.delivery_method}}"  bindtap='qrsTap'>确认收货</view>
