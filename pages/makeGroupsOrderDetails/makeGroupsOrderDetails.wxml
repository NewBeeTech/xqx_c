                          <view class='qr_sh' wx:if="{{xqObj.order_state==2}}" data-goods_type='{{xqObj.goods_type}}' data-id='{{xqObj.id}}'  bindtap='qrsTap' data-delivery_method="{{xqObj.delivery_method}}">确认自提</view>
