<wxs module="filters" src="../spellGroupHome/filterString.wxs"></wxs>
<view class='citybox'>

    <view class='citynow'>
          <text>当前选择城市：{{filters.toStr(city)}}</text>
    </view>
    <scroll-view scroll-y='{{scrolly}}' style='height:1070rpx'  scroll-with-animation='true' class='scrollBox' scroll-into-view="{{toView}}">
      <!-- scroll-top="{{h}}" -->
        <view class='citychoisebox' wx:for='{{citys}}'  id='{{item.firstLetter}}'>
              <view class='gray' wx:if="{{item.firstLetter!=citys[index-1].firstLetter}}">{{item.firstLetter}}</view>
              <view class='citychoise' hover-class="citychoise-hover" hover-stay-time='2000'  data-city='{{item.cityname}}' data-codeid='{{item.id}}'  bindtap='goToHome' >
                    <view wx:if='{{item.cityname==city||item.cityname+"市"==city}}' >
                          <text  class='citych1'>{{item.cityname}}</text>
                          <image src='../../images/cityChoise/dg.png' class='img'></image>
                    </view>     
                    <text class='l' wx:else>{{item.cityname}}</text>
              </view>
        </view>

      </scroll-view >

      <view class='cityInit' data-shuju="{{cityFirstLetter}}" data-height="{{(winHeight-108)/cityFirstLetter.length|Int}}" style='height:{{winHeight-108}}px;'>
       <!-- cityFirstLetter cityInitBox -->
            <view class='cityInitInner'  wx:for='{{cityFirstLetter}}'  bindtap='toScrollTop' data-xiabiao='{{index}}' style='height:{{(winHeight-108)/cityFirstLetter.length}}px;'>
                  <text>{{item}}</text>
            </view>
      </view>

</view>



